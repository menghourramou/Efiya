{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>
    <div class="container">
        <form method="POST">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.date_depart) }}
            {{ form_row(registrationForm.formule) }}
            {{ form_row(registrationForm.voyage) }}
            {{ form_row(registrationForm.prix) }}
            {{ form_row(registrationForm.num_passeport) }}
            {{ form_row(registrationForm.date_expiration_passeport) }}

            <button class="btn btn-secondary">Valider</button>
        {{ form_end(registrationForm) }}
        </form>
    </div>
{% endblock %}
